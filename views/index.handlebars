<div class="container">

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <img src="/assets/img/Krabby_Patty_transparentpng.png" alt="Krabby Patty">
            <h1>Eat-Da-Burger!</h1>
        </div>
        <div class="col-4"></div>
    </div>

    <br/>

    <div class="row">
        <div class="col-4" id="not_devoured_burger">
            <h5 class="text-center">Burgers Available</h5>
            <ul class="text-center">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4"></div>
        <div class="col-4" id="devoured_burger">
            <h5 class="text-center">Burgers Already Devoured</h5>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <br/>
    <br/>

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center" id="newBurger">
            <h5>What type of burger would you like?</h5>
            <div class="form-group">
                <label for="burgerType">Type of burger:</label>
                <input type="text" id="burgerType" name="name">
                <button type="submit">Add Burger</button>
            </div>
        </div>
        <div class="col-4"></div>
    </div>

</div>