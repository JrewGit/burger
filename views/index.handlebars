<div class="container">

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <img src="/assets/img/Krabby_Patty_transparentpng.png" alt="Krabby Patty">
            <h1>Eat-Da-Burger!</h1>
        </div>
        <div class="col-4"></div>
    </div>

    <div class="row">
        <div class="col-4" id="not_devoured_burger">
            <h5 class="text-center">Burgers Available</h5>
            <ul class="text-center">
                {{#each burgers}}
                {{#unless devoured}}
                <li>{{this.burger_name}}</li>
                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="true">
                    <button class="btn" type="submit">Devour It!</button>
                </form>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4"></div>
        <div class="col-4" id="devoured_burger">
            <h5 class="text-center">Burgers Already Devoured</h5>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{this.burger_name}}</li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>



</div>

